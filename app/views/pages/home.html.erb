<div id="banner" style="background-image: linear-gradient(-225deg, rgba(27, 29, 29, 0.68) 0%, rgba(40, 53, 62, 0.6) 50%), url(<%= image_url 'banner.jpg' %>);">

  <div class="banner-flex container">
      <div class="col-xs-12 col-sm-6">
        <div class="banner-message">
          <h1>GuitWise</h1>
          <h5>A community of guitarists learning from each other</h5>
        </div>
      </div>

      <div class="col-xs-12 col-sm-6">

      <div class="home-form">
        <% if user_signed_in? %>
            <%= render 'shared/new_post_form' %>
        <% else %>
          <div class="buttons">
            <a class="btn btn-transparent" data-toggle="modal" data-target="#loginModal">Login</a>
            <a class="btn btn-form" data-toggle="modal" data-target="#signupModal">Sign Up</a>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="page-wrapper">
<% if current_user && @follow_posts.any? %>
  <% @follow_posts.reverse.each do |post| %>
    <%= render 'shared/post_card', post: post %>
  <% end -%>
<% else %>
  <% @posts.reverse.each do |post|  %>
      <%= render 'shared/post_card', post: post %>
  <% end %>
<% end -%>
</div>

<%= render 'posts/new' %>
