<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-offset-2 col-sm-8">
      <div class="devise-card card">
        <h2>Sign up</h2>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :name, required: true, autofocus: true, label: false, placeholder: "Name", class: "first-input" %>
            <%= f.input :email, required: true, label: false, placeholder: "example@guitwise.com" %>
            <%= f.input :password, required: true, label: false, placeholder: "agoodpasswordisverylong" %>
            <%= f.input :password_confirmation, required: true, label: false, placeholder: "Please rewrite your password", class: "last-input" %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Sign up", class: "btn-form" %>
          </div>
        <% end %>
        <div class="devise-links">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
