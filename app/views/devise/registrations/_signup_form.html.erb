<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :name, required: true, autofocus: true, label: false, placeholder: "Name" %>
    <%= f.input :email, required: true, label: false, placeholder: "example@guitwise.com" %>
    <%= f.input :password, required: true, label: false, placeholder: "agoodpasswordisverylong" %>
    <%= f.input :password_confirmation, required: true, label: false, placeholder: "Please rewrite your password" %>
    <%= f.input :photo, as: :attachinary, label: false, class: "btn btn-default" %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, "Sign up", class: "btn-form" %>
  </div>
<% end -%>
