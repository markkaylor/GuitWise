<div class="show-card-wrapper">
  <div class="show-post-card-container">
    <div class="show-post-card-left">
      <div class="show-post-card-votes">
        <%= link_to upvote_post_path, method: :post do %>
          <i class="fa fa-thumbs-up" aria-hidden="true"></i>
        <% end %>
        <div class="show-votes-number"><%= @post.votes_of %></div>
        <%= link_to downvote_post_path, method: :post do %>
        <i class="fa fa-thumbs-down" aria-hidden="true"></i>
        <% end %>
      </div>
      <div class="text-center">
        <div class="show-post-card-user text-center">
          <%= image_tag post_avatar_url(@post), style: "margin-bottom: 5px;" %>
          <div class="show-post-card-info">
            <div class="show-post-card-username"><%= @post.user.name %></div>
            <div class="show-post-card-time"><span>Posted</span> <%= time_ago_in_words @post.created_at %> <span>ago</span></div>
          </div>
        </div>
        <%= social_share_button_tag(@post.title) %>
        <div class="fb-share-button" data-href="<%= request.original_url %>" data-layout="button" data-size="large" data-mobile-iframe="false"><a class="fb-xfbml-parse-ignore" target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=http%3A%2F%2F<%= request.original_url %>%2F&amp;src=sdkpreparse">Share</a></div>
      </div>
    </div>

    <div class="show-post-card-middle">
      <div class="show-post-card-title">
        <h4 style="padding-top: 20px;"><%= @post.title %></h4>
      </div>
      <div class="show-post-card-video">
        <iframe width="550" height="309" src="<%= @post.video_url %>" frameborder="0" allowfullscreen></iframe>
      </div>
      <div class="show-post-card-content">
        <p style="margin-top: 20px;"> <%= @post.content.empty? ? "No description" : @post.content %> </p>
      </div>
    </div>
  </div>
</div>

