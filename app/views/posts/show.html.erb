<% content_for(:title_tag) do %>
  <%= @post.title %> | GuitWise
<% end -%>

<div class="page-wrapper show-page-wrapper">
  <%= render "show_post_card" %>

 <div class="post-card-answers" id="show-responses">
    <h6><%= pluralize @post.comments.count, 'response' %></h6>
    <% if user_signed_in? %>
        <button type="button" class="btn btn-success" data-toggle="modal" data-target="#commentModal">Comment</button>
    <% else %>
      <a class="btn btn-success" data-toggle="modal" data-target="#loginModal">Log in to comment</a>
    <% end -%>
 </div>

  <% @post.comments.each do |c| %>
    <%= render "posts/comment_card", comment: c %>
  <% end %>

  <%= render 'comment_form' %>
</div>










