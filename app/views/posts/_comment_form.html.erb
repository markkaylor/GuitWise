<div class="modal fade" id="commentModal" tabindex="-1" role="dialog" aria-labelledby="commentModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content modal-padding">
      <div class="modal-header">
        <h4 style="margin: 0;">New Comment</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for [@post, @comment] do |f| %>
          <div class="form-inputs">
            <%= f.input :video_url, required: true, autofocus: true, label: false, placeholder: "www.youtube.com/myvideo"%>
            <%= f.input :content, autofocus: true, label: false, placeholder: "What do you want to say to the original poster?" %>
          </div>
          <div class="form-actions">
            <%= f.submit "Submit", class: "btn btn-form" %>
          </div>
        <% end -%>
      </div>
    </div>
  </div>
</div>
